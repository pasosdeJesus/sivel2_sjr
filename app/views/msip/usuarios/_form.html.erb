<%= simple_form_for @usuario, :html => { :class => 'form-horizontal' } do |f| %>

  <%= render 'usuario', :f => f %>

  <%= f.association :oficina, 
    collection: Msip::Oficina.habilitados.where("id<>'1'"),
    label_method: :nombre,
    value_method: :id,
    include_blank: true
  %>

  <%= f.association :etiqueta, 
    collection: Msip::Etiqueta.habilitados.where(
      "nombre LIKE 'COMPARTIR%'"),
	  label_method: :nombre, 
    value_method: :id 
  %>

  <div class="form-actions">
    <%= f.button :submit, :class => 'btn btn-primary', 'data-turbo' => false %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                usuarios_path, :class => 'btn' %>
  </div>
<% end %>
