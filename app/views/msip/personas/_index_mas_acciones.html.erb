<% if can?(:create, Sivel2Gen::Caso) %>
  <% if registro.caso.count == 0 %>
    <%= link_to 'Crear Caso',
      sivel2_sjr.new_caso_path({contacto: registro.id}), 
      :class => 'btn btn-sm' %>
  <% elsif registro.caso.count > 1 %>
    En varios casos: 
  <%= registro.caso.map(&:id).map {|i| 
      r = link_to i.to_s, sivel2_gen.caso_path(i), target: '_blank'
      r.html_safe
    }.join("; ".html_safe).html_safe %>
  <% else %>
    <% idc = registro.caso[0].id %>
    En caso 
    <%= link_to idc.to_s,
      sivel2_gen.caso_path(idc),
      target: '_blank' %>
  <% end %>
<% end %>
