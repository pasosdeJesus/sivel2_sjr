<div class='control-group nested-fields'>
  <div class="controls">
    <%= f.input :fechaatencion, 
      :input_html => { "data-behaviour" => "datepicker" },
      :as => :string, :label => "Fecha de Atención" %>
    <%= f.input :descamp, as: :text, label: "Situación encontrada" %>
    <%= f.input :observaciones, as: :text, label: "Observaciones" %>
    <%= f.input :orientaciones, as: :text, label: "Recomendaciones" %>
    <%= f.input :compromisos, as: :text, label: "Compromisos de la Persona" %>
    <%= f.input :gestionessjr, as: :text, label: "Compromisos del SJR" %>

    <%= f.association :ayudasjr, 
      collection: Ayudasjr.where(fechadeshabilitacion: nil).order(:nombre).all,
      label: "Asistencia Humanitaria",
      label_method: :nombre, 
      value_method: :id 
    %>
    <%= f.input :detallear, label: "Detalle A. Humanitaria",
        wrapper_html: { style: "padding-bottom: 18px;" }
    %>
    <%= f.input :montoar, label: "Monto A. Humanitaria" %>

    <%= f.association :emprendimiento, 
      collection: Emprendimiento.where(fechadeshabilitacion: nil).order(:nombre).all,
      label: "Emprendimiento",
      label_method: :nombre, 
      value_method: :id 
    %>
    <%= f.input :detalleem, 
      label: "Detalle Emprendimiento",
      wrapper_html: { style: "padding-bottom: 18px;" }
    %>
    <%= f.input :montoem, 
      label: "Monto Emprendimiento",
      wrapper_html: { style: "padding-bottom: 18px;" }
    %>

    <%= f.association :aspsicosocial, 
      collection: Aspsicosocial.where(fechadeshabilitacion: nil).order(:nombre).all,
      label: "Asistencia Psicosocial",
      label_method: :nombre, 
      value_method: :id 
    %>
    <%= f.input :detalleap, label: "Detalle A. Psicosocial" %>
    <%= f.input :montoap, label: "Monto A. Psicosocial" %>

    <%= f.association :aslegal, 
      collection: Aslegal.where(fechadeshabilitacion: nil).order(:nombre).all,
      label: "Asistencia Legal",
      label_method: :nombre, 
      value_method: :id 
    %>
    <%= f.input :detalleal, label: "Detalle A. Legal" %>
    <%= f.input :montoal, label: "Monto A. Legal" %>

  </div>
</div>
